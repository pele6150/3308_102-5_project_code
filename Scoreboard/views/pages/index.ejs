  <body style="background-color:#d83e50">
    <div class="container">
      <h2>Scoreboard - Short Fuze</h2>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Username</th>
            <th>Games Played</th>
            <th>Most Coins Collected</th>
            <th>Total Coins Collected</th>
          </tr>
        </thead>
        <tbody id="scoreTableBody">
          <% if (players) {
    				var board_rows = '';
            var player_count = 0;
    				 players.forEach(function(item){
              player_count++;
    				 	board_rows += '<tr><td>' + player_count + '</td>';
    				 	board_rows += '<td>' + item.username + '</td>';
    				 	board_rows += '<td>' + item.games_played + '</td>';
    				 	board_rows += '<td>' + item.most_coins + '</td>';
              board_rows += '<td>' + item.total_coins + '</td></tr>';
    				});%>
          <%- board_rows %>
    			<% } %>
        </tbody>
      </table>
    </div>
  </body>
